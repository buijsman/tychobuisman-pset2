<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tycho.tychobuisman_pset2.activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:src="@drawable/madlibs"
        android:id="@+id/madlibs"/>


    <Button
        android:text="GET STARTED!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="32dp"
        android:onClick="forward"
        android:id="@+id/button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Welcome to MadLibs! I will ask you to give me a few words to complete a story. You won't be able to see the complete story until you are done filling in the words. Click below to get started!"
        android:textSize="15dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/madlibs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

</RelativeLayout>
